<Project>
    <Target Name="Ragel" Inputs="@(Ragel)" Outputs="$(BaseIntermediateOutputPath)$(Configuration)\@(Ragel-&gt;%(Filename).cs)">
        <RagelTask Sources="@(Ragel)" OutputPath="$(BaseIntermediateOutputPath)$(Configuration)\">
            <Output ItemName="Generated" TaskParameter="Outputs" />
        </RagelTask>
        <ItemGroup>
            <Compile Include="@(Generated)" />
            <FileWrites Include="@(Generated)" />
            <!-- For clean to work properly -->
        </ItemGroup>
    </Target>
    <PropertyGroup>
        <GeneratedRagelCode>
            Ragel
        </GeneratedRagelCode>
    </PropertyGroup>
    <Target Name="GenerateRagelCode" DependsOnTargets="$(GeneratedRagelCode)" />
    <PropertyGroup>
        <CoreCompileDependsOn>
            GenerateRagelCode;
            $(CoreCompileDependsOn)
        </CoreCompileDependsOn>
        <BuildDependsOn>
            GenerateRagelCode;
            $(BuildDependsOn)
        </BuildDependsOn>
    </PropertyGroup>
    <ItemGroup>
        <AvailableItemName Include="Ragel" />   
    </ItemGroup>
</Project>